@model Aplicacion_Web_3.Models.TblUsuarios

@{
    Layout = null;
    if (TempData["mensajeAlerta"] != null)
    {
        @Html.Raw(TempData["mensajeAlerta"]);
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css1");

    <div class="formulario">
        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-inline">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NombreUsuario, htmlAttributes: new { @class = "control-label espacio" })
                @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "form-control espacio", @id = "NombreUsuario" } })
                @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Contrasenia, htmlAttributes: new { @class = "control-label espacio" })
                    @Html.EditorFor(model => model.Contrasenia, new { htmlAttributes = new { @class = "form-control espacio", @id = "Contrasenia" } })
                    @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger" })
                
            </div>

            <div class="form-group">
                <input type="button" value="Ingresar" class="btn btn-primary espacio" id="btnIngresar" />
            </div>
        </div>
}
    </div>

</body>
</html>
